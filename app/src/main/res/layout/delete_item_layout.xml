<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:id="@+id/delete_item_holder_layout"
    android:background="@drawable/list_item_container_layout_border"
    >


    <CheckBox
        android:id="@+id/delete_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/delete_sms_text_container"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/delete_toggle"
        android:layout_toEndOf="@+id/delete_toggle"
        android:background="@drawable/text_view_round_border"
        android:fontFamily="@font/oxygen"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>